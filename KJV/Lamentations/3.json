,"strongs":0,"text":"my"},{"index":3,"strongs":"H08127","text":"teeth"},{"index":4,"strongs":0,"text":"with gravel"},{"index":5,"strongs":"H02687","text":"stones,"},{"index":6,"strongs":0,"text":"he hath"},{"index":7,"strongs":"H03728","text":"covered"},{"index":8,"strongs":0,"text":"me with"},{"index":9,"strongs":"H0665","text":"ashes."}]},{"chapter":3,"text":"And thou hast removed my soul far off from peace: I forgat prosperity.","verse":17,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"And thou hast "},{"index":1,"strongs":"H02186","text":"removed"},{"index":2,"strongs":0,"text":"my"},{"index":3,"strongs":"H05315","text":"soul"},{"index":4,"strongs":0,"text":"far"},{"index":5,"strongs":"H02186","text":"off"},{"index":6,"strongs":0,"text":"from"},{"index":7,"strongs":"H07965","text":"peace:"},{"index":8,"strongs":0,"text":"I"},{"index":9,"strongs":"H05382","text":"forgat"},{"index":10,"strongs":"H02896","text":"prosperity."}]},{"chapter":3,"text":"And I said, My strength and my hope is perished from the LORD:","verse":18,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"And I "},{"index":1,"strongs":"H0559","text":"said,"},{"index":2,"strongs":0,"text":"My"},{"index":3,"strongs":"H05331","text":"strength"},{"index":4,"strongs":0,"text":"and my"},{"index":5,"strongs":"H08431","text":"hope"},{"index":6,"strongs":0,"text":"is"},{"index":7,"strongs":"H0006","text":"perished"},{"index":8,"strongs":0,"text":"from the"},{"index":9,"strongs":"H03068","text":"LORD:"}]},{"chapter":3,"text":"Remembering mine affliction and my misery, the wormwood and the gall.","verse":19,"book":"Lamentations","reference":[{"index":0,"strongs":"H02142","text":"Remembering"},{"index":1,"strongs":0,"text":"mine"},{"index":2,"strongs":"H06040","text":"affliction"},{"index":3,"strongs":0,"text":"and my"},{"index":4,"strongs":"H04788","text":"misery,"},{"index":5,"strongs":0,"text":"the"},{"index":6,"strongs":"H03939","text":"wormwood"},{"index":7,"strongs":0,"t