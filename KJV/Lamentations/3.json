[{"chapter":3,"text":"I [am] the man [that] hath seen affliction by the rod of his wrath.","verse":1,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"I AM the "},{"index":1,"strongs":"H01397","text":"man"},{"index":2,"strongs":0,"text":"that hath"},{"index":3,"strongs":"H07200","text":"seen"},{"index":4,"strongs":"H06040","text":"affliction"},{"index":5,"strongs":0,"text":"by the"},{"index":6,"strongs":"H07626","text":"rod"},{"index":7,"strongs":0,"text":"of his"},{"index":8,"strongs":"H05678","text":"wrath."}]},{"chapter":3,"text":"He hath led me, and brought [me into] darkness, but not [into] light.","verse":2,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"He hath "},{"index":1,"strongs":"H05090","text":"led"},{"index":2,"strongs":0,"text":"me, and"},{"index":3,"strongs":"H03212","text":"brought"},{"index":4,"strongs":0,"text":"me into"},{"index":5,"strongs":"H02822","text":"darkness,"},{"index":6,"strongs":0,"text":"but not into"},{"index":7,"strongs":"H0216","text":"light."}]},{"chapter":3,"text":"Surely against me is he turned; he turneth his hand [against me] all the day.","verse":3,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"Surely against me is he "},{"index":1,"strongs":"H07725","text":"turned;"},{"index":2,"strongs":0,"text":"he"},{"index":3,"strongs":"H02015","text":"turneth"},{"index":4,"strongs":0,"text":"his"},{"index":5,"strongs":"H03027","text":"hand"},{"index":6,"strongs":0,"text":"against me all the"},{"index":7,"strongs":"H03117","text":"day."}]},{"chapter":3,"text":"My flesh and my skin hath he made old; he hath broken my bones.","verse":4,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"My "},{"index":1,"strongs":"H01320","text":"flesh"},{"index":2,"strongs":0,"text":"and my"},{"index":3,"strongs":"H05785","text":"skin"},{"index":4,"strongs":0,"text":"hath he made"},{"index":5,"strongs":"H01086","text":"old;"},{"index":6,"strongs":0,"text":"he hath"},{"index":7,"strongs":"H07665","text":"broken"},{"index":8,"strongs":0,"text":"my"},{"index":9,"strongs":"H06106","text":"bones."}]},{"chapter":3,"text":"He hath builded against me, and compassed [me] with gall and travail.","verse":5,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"He hath builded "},{"index":1,"strongs":"H01129","text":"against"},{"index":2,"strongs":0,"text":"me, and"},{"index":3,"strongs":"H05362","text":"compassed"},{"index":4,"strongs":0,"text":"me with"},{"index":5,"strongs":"H07219","text":"gall"},{"index":6,"strongs":0,"text":"and"},{"index":7,"strongs":"H08513","text":"travail."}]},{"chapter":3,"text":"He hath set me in dark places, as [they that be] dead of old.","verse":6,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"He hath "},{"index":1,"strongs":"H03427","text":"set"},{"index":2,"strongs":0,"text":"me in dark"},{"index":3,"strongs":"H04285","text":"places,"},{"index":4,"strongs":0,"text":"as they that be"},{"index":5,"strongs":"H04191","text":"dead"},{"index":6,"strongs":0,"text":"of"},{"index":7,"strongs":"H05769","text":"old."}]},{"chapter":3,"text":"He hath hedged me about, that I cannot get out: he hath made my chain heavy.","verse":7,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"He hath "},{"index":1,"strongs":"H01443","text":"hedged"},{"index":2,"strongs":0,"text":"me about, that I cannot get"},{"index":3,"strongs":"H03318","text":"out:"},{"index":4,"strongs":0,"text":"he hath made my"},{"index":5,"strongs":"H05178","text":"chain"},{"index":6,"strongs":"H03513","text":"heavy."}]},{"chapter":3,"text":"Also when I cry and shout, he shutteth out my prayer.","verse":8,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"Also when I "},{"index":1,"strongs":"H02199","text":"cry"},{"index":2,"strongs":0,"text":"and"},{"index":3,"strongs":"H07768","text":"shout,"},{"index":4,"strongs":0,"text":"he shutteth"},{"index":5,"strongs":"H05640","text":"out"},{"index":6,"strongs":0,"text":"my"},{"index":7,"strongs":"H08605","text":"prayer."}]},{"chapter":3,"text":"He hath inclosed my ways with hewn stone, he hath made my paths crooked.","verse":9,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"He hath "},{"index":1,"strongs":"H01443","text":"inclosed"},{"index":2,"strongs":0,"text":"my"},{"index":3,"strongs":"H01870","text":"ways"},{"index":4,"strongs":0,"text":"with hewn"},{"index":5,"strongs":"H01496","text":"stone,"},{"index":6,"strongs":0,"text":"he hath made my"},{"index":7,"strongs":"H05410","text":"paths"},{"index":8,"strongs":"H05753","text":"crooked."}]},{"chapter":3,"text":"He [was] unto me [as] a bear lying in wait, [and as] a lion in secret places.","verse":10,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"He was unto me as a "},{"index":1,"strongs":"H01677","text":"bear"},{"index":2,"strongs":0,"text":"lying in"},{"index":3,"strongs":"H0693","text":"wait,"},{"index":4,"strongs":0,"text":"and as a"},{"index":5,"strongs":"H0738","text":"lion"},{"index":6,"strongs":0,"text":"in secret"},{"index":7,"strongs":"H04565","text":"places."}]},{"chapter":3,"text":"He hath turned aside my ways, and pulled me in pieces: he hath made me desolate.","verse":11,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"He hath turned "},{"index":1,"strongs":"H05493","text":"aside"},{"index":2,"strongs":0,"text":"my"},{"index":3,"strongs":"H01870","text":"ways,"},{"index":4,"strongs":0,"text":"and pulled me in"},{"index":5,"strongs":"H06582","text":"pieces:"},{"index":6,"strongs":0,"text":"he hath"},{"index":7,"strongs":"H07760","text":"made"},{"index":8,"strongs":0,"text":"me"},{"index":9,"strongs":"H08074","text":"desolate."}]},{"chapter":3,"text":"He hath bent his bow, and set me as a mark for the arrow.","verse":12,"book":"Lamentations","reference":[{"index":0,"strongs":0,"text":"He hath "},{"index":1,"strongs":"H01869","text":"bent"},{"index":2,"strongs":0,"text":"his"},{"index":3,"strongs":"H07198","text":"bow,"},